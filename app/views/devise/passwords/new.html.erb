<%= stylesheet_link_tag "registration" %>
<%= render "devise/shared/error_messages", resource: resource %>  
<div class="container mt-5 mb-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5"> <span class="circle"><i class="fa fa-check"></i></span>
                <h5 class="mt-3"> Forgot Password <br> 
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                
                <div class="form-input"> <i class="fa fa-envelope"></i> 
                   <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email"%>
                </div>
                
                <br>
                <%= f.submit "Reset", class:"edit btn pb-3" %>  
                <br>
              <%end%>  
            </div>
        </div>
    </div>
</div>

