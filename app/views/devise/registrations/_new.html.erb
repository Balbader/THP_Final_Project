<%= stylesheet_link_tag "registration" %>
<div class="container pt-5 pb-5" id="registration">
  <div class="background_box">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-column align-items-center text-left">
            <h3>Sign up</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group pt-4">
              <label for="formGroupExampleInput">Email</label>
              <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter Email" <%= f.email_field :email, autofocus: true, autocomplete: "email" %></input>
            </div>

            <div class="form-group">
              <label for="formGroupExampleInput2">Password</label>
               <input type="password" id="inputPassword" class="form-control" placeholder="Enter Password" required="" <%= f.password_field :password, autocomplete: "new-password" %></input>
            </div>

            <div class="form-group">
              <label for="formGroupExampleInput2">Password Confirmation</label>
              <input type="password" id="inputPassword" class="form-control" placeholder="Confirm Password" required="" <%= f.password_field :password_confirmation, autocomplete: "new-password" %></input>
            </div>

            <div class="actions pt-4">
              <input type="submit" class="edit btn pb-3" value="Sign up"<%= f.submit "Sign up" %></input>
              <% end %>
              <p class="pt-2 pl-2">Already a Member? <%= render "devise/shared/links" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

