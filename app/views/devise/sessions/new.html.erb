<%= stylesheet_link_tag "registration" %>

<div class="container pt-5 pb-5" id="registration">
  <div class="background_box">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-column align-items-center text-left">
            <h3>Login</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group pt-4">
              <label for="formGroupExampleInput">Email</label>
              <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter Email*" <%= f.email_field :email, autofocus: true, autocomplete: "email" %></input>
            </div>

            <div class="form-group">
              <label for="formGroupExampleInput2">Password</label>
               <input type="password" id="inputPassword" class="form-control" placeholder="Enter Password*" required="" <%= f.password_field :password, autocomplete: "current-password" %></input>
            </div>


            <div class="actions pt-4">
              <input type="submit" class="edit btn pb-3" value="Log In"<%= f.submit "Log in" %></input>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
              <% end %>
            <% end %> 
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>