<%= stylesheet_link_tag "registration" %>

<div class="container pt-5 pb-5">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">

                    <h3>Login</h3>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Email *" value="" <%= f.email_field :email, autofocus: true, autocomplete: "email"%></input>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Your Password *" value="" <%= f.password_field :password, autocomplete: "current-password"%></input>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="edit button" value="Login"<%= f.submit "Log in" %></input>
                        </div>
                          <% if devise_mapping.rememberable? %>
                              <div class="field">
                                  <%= f.check_box :remember_me %>
                                   <%= f.label :remember_me %>
                              </div>
                          <% end %>
                    <% end %>  
                    <%= render "devise/shared/links" %>
                </div>
</div>

</div>
</div>
</div>
