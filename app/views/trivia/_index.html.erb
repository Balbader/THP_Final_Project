<%= stylesheet_link_tag "trivia-index" %>
<div class="jumbotron text-white text-center jumbotron-image shadow" style="height: 500px">
      <h2 class="mb-4">
        Welcome to Ludee
      </h2>
      <p class="mb-4">
        Ready to Play ?
      </p>
      <%= link_to "Play now",
           trivium_path(@trivia.ids), class: "btn btn-primary"  %>
    </div>
<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Ludee Players</h5>
        <div class="row">
            <!-- Team member -->
            <% @user.each do |user| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="image-flip" >
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><%= image_tag "avatar_trivia.png", class: "img-fluid", alt: "avatar" %></p>
                                    <h4 class="card-title"><%= user.email%> </h4>
                                    <p class="card-text">Challenger score :<%= user.score%> </p>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">Ludee Score</h4>
                                    <h1 class="card-text"><%= user.score%></h1>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-skype"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-google"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%end%>
              </div>
    </div>
</section>