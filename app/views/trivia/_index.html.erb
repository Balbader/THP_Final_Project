<%= stylesheet_link_tag "trivia-index" %>

<section class="container-fluid" id="top_pic">
    <div class="container text-white text-center">
      <h2 class="mb-4">Ready to Play?</h2>
      <div class="container just_know col-lg-6 col-md-8 mx-auto">
        <%= link_to "Play now",trivium_path(@trivia.ids), class: "edit mt-3"  %>
      </div>
    </div>
</section>

<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Ludee Global Loan Fund Status</h5>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="image-flip" >
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><img class=" img-fluid" src="https://cdn.pixabay.com/photo/2016/06/02/02/33/triangles-1430105_1280.png" alt="card image"></p>
                                    <h4 class="card-title">Jean Delatour</h4>
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">Loan Status</h4>
                                    <h1 class="card-text">Paid Off</h1>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="https://www.fiverr.com/share/qb8D02">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="https://www.fiverr.com/share/qb8D02">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="https://www.fiverr.com/share/qb8D02">
                                                <i class="fa fa-skype"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="https://www.fiverr.com/share/qb8D02">
                                                <i class="fa fa-google"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</section>










<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Game Rank</h5>
        <div class="row">
            <!-- Team member -->
            <% @user.each do |user| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="image-flip" >
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><%= image_tag "avatar_trivia.png", class: "img-fluid", alt: "avatar" %></p>
                                    <h4 class="card-title"><%= user.email%> </h4>
                                    <p class="card-text">Challenger score :<%= user.score%> </p>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">Ludee Score</h4>
                                    <h1 class="card-text"><%= user.score%></h1>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-skype"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank">
                                                <i class="fa fa-google"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%end%>
              </div>
    </div>
</section>

<section class="container-fluid" id="top_pic">
    <div class="container text-white text-center">
      <h2 class="mb-4">Ready to Play?</h2>
      <div class="container just_know col-lg-6 col-md-8 mx-auto">
        <%= link_to "Play now",trivium_path(@trivia.ids), class: "edit mt-3"  %>
      </div>
    </div>
</section>