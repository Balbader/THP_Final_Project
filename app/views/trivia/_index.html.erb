<%= stylesheet_link_tag "trivia-index" %>
<%= stylesheet_link_tag "uniform" %>


<section class="container-fluid" id="top_pic">
    <div class="container text-white text-center">
      <h2 class="mb-4">Ready to Play?</h2>
      <div class="container just_know col-lg-6 col-md-8 mx-auto">
        <%= link_to "Play now",trivium_path(@trivia.ids), class: "edit mt-3"  %>
      </div>
    </div>
</section>

<section id="team" class="pb-5">
    <div class="container">
        <h1 class="text-center p-5">Ludee Global Loan Fund Status</h1>
        <hr class="three">
        <div class="row pt-5">
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="image-flip" >
              <div class="mainflip flip-0">
                <div class="frontside">
                  <div class="card">
                    <div class="card-body text-center">
                      <p><%= image_tag "master/tobey.jpg", class: "img-fluid mt-3", alt: "avatar" %></p>
                      <h3 class="card-title text-muted">Tobey Maguire</h3>
                      <h4 class="card-text" style="color:MediumOrchid;">Loan Total: 15.000$</h4>
                      <h4 class="card-text text-white">Left: 10.500$</h4>
                    </div>
                  </div>
                </div>
                <div class="backside backcard">
                  <div class="card">
                    <div class="card-body text-center">
                      <h4 class="card-title text-muted pt-3">Loan Status</h4>
                      <h2 class="card-text pt-5" style="color:limeGreen;">On Going</h2>
                      <h4 class="card-text  pt-5 text-info">Paid: 4.500$</h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="image-flip" >
                <div class="mainflip flip-0">
                  <div class="frontside">
                    <div class="card">
                      <div class="card-body text-center">
                        <p><%= image_tag "master/tom.jpg", class: "img-fluid mt-3", alt: "avatar" %></p>
                        <h3 class="card-title text-muted">Tom Holland</h3>
                        <h4 class="card-text" style="color:MediumOrchid;">Loan Total: 13.000$</h4>
                        <h4 class="card-text text-white">Left: 10.000$</h4>
                      </div>
                    </div>
                  </div>
                  <div class="backside backcard">
                    <div class="card">
                      <div class="card-body text-center">
                      <h4 class="card-title text-muted pt-3">Loan Status</h4>
                      <h2 class="card-text  pt-5" style="color:limeGreen;">On Going</h2>
                      <h4 class="card-text  pt-5 text-info">Paid: 3.000$</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              </div>
              <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="image-flip" >
                <div class="mainflip flip-0">
                  <div class="frontside">
                    <div class="card">
                      <div class="card-body text-center">
                        <p><%= image_tag "master/andrew.png", class: "img-fluid mt-3", alt: "avatar" %></p>
                        <h3 class="card-title text-muted">Andrew Garfield</h3>
                        <h4 class="card-text" style="color:MediumOrchid;">Loan Total: 9.000$</h4>
                        <h4 class="card-text text-white">Left: 9.000$</h4>
                      </div>
                    </div>
                  </div>
                  <div class="backside backcard">
                    <div class="card">
                      <div class="card-body text-center">
                      <h4 class="card-title text-muted pt-3">Loan Status</h4>
                      <h2 class="card-text pt-5" style="color:darkred;">On Hold</h2>
                      <h4 class="card-text pt-5 text-warning">Paid: 0.000$</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              </div>

          </div>
        </div>
      </div>
</section>


<section id="team" class="pb-5">
  <div class="container">
  <h1 class="text-center p-5">Game Rank</h1>
  <hr class="three">
  <div class="row pt-5">
  <!-- Team member -->
  <% @user.each do |user| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="image-flip" >
      <div class="mainflip flip-0">
        <div class="frontside">
          <div class="card">
            <div class="card-body text-center">
               <p>
                 <%= image_tag "avatar3.jpeg", class:"img-fluid mt-3", width:"50" unless user.avatar.attached? %>
                 <%= image_tag user.avatar, class:"img-fluid mt-3", width:"50" if user.avatar.attached? %>
               </p>
               <h4 class="card-title text-muted"><%= "Ludee Player"if user.first_name == nil &&  user.last_name== nil %>
               <%= user.last_name%> <%= user.first_name%></h4>
                <p class="card-text text-white">Challenger score :<%= user.score%> </p>
            </div>
          </div>
        </div>
        <div class="backside backcard">
          <div class="card">
            <div class="card-body text-center">
            <h4 class="card-title text-muted mt-4">Current Score</h4>
            <h1 class="card-text mt-3 pt-5"><%= user.score%></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>
</div>
</div>
</section>

<section class="container-fluid" id="top_pic">
    <div class="container text-white text-center">
      <h2 class="mb-4">Ready to Play?</h2>
      <div class="container just_know col-lg-6 col-md-8 mx-auto">
        <%= link_to "Play now",trivium_path(@trivia.ids), class: "edit mt-3"  %>
      </div>
    </div>
</section>