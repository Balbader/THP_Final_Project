<section class="bg-black py-8">
  <div  class="container text-white bg-dark py-8 px-5">
    <%= render 'question' %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
      <hr>
    <%= form_for @answer, url: trivia_answer_path do | f | %>
      <h3><%= f.collection_radio_buttons(:answer, @trivia.answers.shuffle, :id,
                                          :answer) %></h3>
      <%= f.submit "Submit Answer", class: "btn btn-lg btn-info" %>
    <% end %><br>
  </div>
</section>