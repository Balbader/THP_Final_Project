<!DOCTYPE html>
<head>


<section class="masthead py-8">
  <div  class="container card text-white bg-dark py-8 px-5">
    <%= render 'question' %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
      <hr>
    <%= form_for @answer, url: trivia_answer_path do | f | %>
      <h3><%= f.collection_radio_buttons(:answer, @trivia.answers.shuffle, :id,
                                          :answer, html_options: { class: 'form-control' }) do |b| %>
        <%= b.label { b.radio_button + " " + b.text } %><br>
        <% end %>
      </h3>                               
      <%= f.submit "Submit Answer", class: "btn btn-lg" %>
      <%= link_to "Back to Dashboard",trivia_path, class: "btn btn-lg" %>
    <% end %><br>
  </div>
</section>
</head>
