<!DOCTYPE html>
<head>
<%= stylesheet_link_tag "trivia-show" %>

<div class="container pt-5 pb-5">
    <div class="main-body">
          <div class="card">
                  <div class="card-body">


    <%= render 'question' %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
      <hr>
    <%= form_for @answer, url: trivia_answer_path do | f | %>
      <h3><%= f.collection_radio_buttons(:answer, @trivia.answers.shuffle, :id,
                                          :answer, html_options: { class: 'form-control' }) do |b| %>
        <%= b.label { b.radio_button + " " + b.text } %><br />
        <% end %>
      </h3>        
      <br />                     
    <%= f.submit "Submit Answer", class: "btn-quiz" %>
    <br /><br>
    <%= link_to "Back to Dashboard",trivia_path, class: "btn-quiz" %>
    <% end %>
   
   <br>

    <!-- Display the countdown timer in an element lets try-->
<progress value="0" max="10" id="progressBar"></progress>
  
<script>
var timeleft = 10;
var downloadTimer = setInterval(function(){
  if(timeleft <= 0){
    clearInterval(downloadTimer);
  }
  document.getElementById("progressBar").value = 10 - timeleft;
  timeleft -= 1;
}, 1000);
</script>

  </div>
    </div>
  </div>

</section>
</head>
